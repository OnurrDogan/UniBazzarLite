@inject Microsoft.Extensions.Options.IOptions<UniBazaarLite.ViewModels.SiteOptions> Site

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@Site.Value.OfficialName</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
        <div class="container">
            <a class="navbar-brand" asp-page="/Index">@Site.Value.OfficialName</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="mainNav" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Events/Index">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Classifieds" asp-action="Index">Classifieds</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ALERTS -->
    @await Html.PartialAsync("_Alert")

    <!-- MAIN CONTENT -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- OPTIONAL TEMP DATA MESSAGE -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success mt-3">
            @TempData["Message"]
        </div>
    }

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
