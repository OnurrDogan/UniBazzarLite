@page
@model UniBazaarLite.Pages.Events.IndexModel

<h2>Upcoming Events</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var ev in Model.Events)
    {
        <tr>
            <td>@ev.Title</td>
            <td>@ev.StartsAt.ToString("dd MMM yyyy")</td>
            <td>
                <a asp-page="Edit" asp-route-id="@ev.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-page="Register" asp-route-id="@ev.Id" class="btn btn-sm btn-success">Register</a>
            </td>
        </tr>
    }
    </tbody>
</table>
