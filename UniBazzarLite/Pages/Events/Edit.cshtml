@page "{id:guid}"
@model UniBazaarLite.Pages.Events.EditModel
@{
    ViewData["Title"] = "Edit Event";
}

<h2>Edit Event</h2>

<form method="post" class="row g-3">
    <input asp-for="Event.Id" type="hidden" />

    <div class="col-md-6">
        <label asp-for="Event.Title" class="form-label"></label>
        <input asp-for="Event.Title" class="form-control" />
        <span asp-validation-for="Event.Title" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Event.Description" class="form-label"></label>
        <textarea asp-for="Event.Description" class="form-control" rows="4"></textarea>
    </div>

    <div class="col-md-4">
        <label asp-for="Event.StartsAt" class="form-label"></label>
        <input asp-for="Event.StartsAt" class="form-control" type="datetime-local"
               value="@Model.Event?.StartsAt.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="Event.StartsAt" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Event.EndsAt" class="form-label"></label>
        <input asp-for="Event.EndsAt" class="form-control" type="datetime-local"
               value="@Model.Event?.EndsAt?.ToString("yyyy-MM-ddTHH:mm")" />
    </div>

    <div class="col-md-4">
        <label asp-for="Event.Capacity" class="form-label"></label>
        <input asp-for="Event.Capacity" class="form-control" />
        <span asp-validation-for="Event.Capacity" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Event.Location" class="form-label"></label>
        <input asp-for="Event.Location" class="form-control" />
        <span asp-validation-for="Event.Location" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-page="Index" class="btn btn-secondary">Back</a>
    </div>
</form>

<form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this event?');" class="mt-3">
    <input type="hidden" asp-for="Event.Id" />
    <button type="submit" class="btn btn-danger">Delete Event</button>
</form>

