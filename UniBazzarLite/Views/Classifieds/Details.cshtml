@using UniBazaarLite.Models
@model ClassifiedItem
@{
    ViewData["Title"] = "Listing Details";
}

<h2>@Model.Title</h2>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Price.ToString("C")</h5>
        <p class="card-text">@Model.Description</p>

        <ul class="list-unstyled small">
            <li><strong>Category:</strong> @Model.Category ?? "—"</li>
            <li><strong>Posted:</strong> @Model.PostedAt.ToString("g")</li>
            <li><strong>Status:</strong> @(Model.IsSold ? "Sold" : "Available")</li>
        </ul>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to list</a>