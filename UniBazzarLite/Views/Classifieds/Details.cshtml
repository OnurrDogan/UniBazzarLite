@*
    Details.cshtml - Shows details for a single classified item
    You can see the description, price, seller, and actions
    Written by a university student for the final project :)
*@
@model ClassifiedItem

@{
    ViewData["Title"] = Model.Title;
}

<div class="row">
    <div class="col-md-8">
        <h1>@Model.Title</h1>
        @if (Model.IsSold)
        {
            <div class="alert alert-secondary">
                <i class="bi bi-check-circle"></i> This item has been sold.
            </div>
        }
        
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Description</h5>
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>
        }
        
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Details</h5>
                <dl class="row">
                    <dt class="col-sm-3">Category:</dt>
                    <dd class="col-sm-9">@Model.Category</dd>
                    
                    <dt class="col-sm-3">Price:</dt>
                    <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
                    
                    <dt class="col-sm-3">Posted:</dt>
                    <dd class="col-sm-9">@Model.PostedAt.ToString("g")</dd>
                    
                    @if (!string.IsNullOrEmpty(Model.SellerEmail))
                    {
                        <dt class="col-sm-3">Seller:</dt>
                        <dd class="col-sm-9">@Model.SellerEmail</dd>
                    }
                </dl>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Actions</h5>
                <div class="d-grid gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Listings
                    </a>
                    @if (!Model.IsSold)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this listing?')">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 