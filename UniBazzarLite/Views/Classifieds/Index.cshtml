@model IEnumerable<ClassifiedItem>

@{
    ViewData["Title"] = "Classifieds";
    var currentPage = ViewData["CurrentPage"] as int? ?? 1;
    var totalPages = ViewData["TotalPages"] as int? ?? 1;
    var currentCategory = ViewData["CurrentCat"] as string ?? "";
}

<h1>Classified Ads</h1>

<div class="row mb-3 align-items-center">
    <!-- Filter form (Category) -->
    <div class="col-md-6">
        <form method="get" class="d-flex flex-wrap align-items-center">
            <label for="categoryFilter" class="me-2 mb-2 mb-md-0">Category:</label>
            <select id="categoryFilter" name="category" class="form-select me-2 mb-2 mb-md-0" style="width:auto;">
                @if (string.IsNullOrEmpty(currentCategory)) {
                    <option value="" selected>All</option>
                } else {
                    <option value="">All</option>
                }
                @if (currentCategory == "Electronics") {
                    <option value="Electronics" selected>Electronics</option>
                } else {
                    <option value="Electronics">Electronics</option>
                }
                @if (currentCategory == "Books") {
                    <option value="Books" selected>Books</option>
                } else {
                    <option value="Books">Books</option>
                }
                @if (currentCategory == "Other") {
                    <option value="Other" selected>Other</option>
                } else {
                    <option value="Other">Other</option>
                }
            </select>
            <button type="submit" class="btn btn-secondary mb-2 mb-md-0">Filter</button>
        </form>
    </div>

    <!-- New listing button -->
    <div class="col-md-6 text-md-end mt-2 mt-md-0">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> New Listing
        </a>
    </div>
</div>

<!-- Listings table -->
<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th class="text-end">Price</th>
                <th>Posted</th>
                <th><!-- Actions --></th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">No listings found.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr class="@(item.IsSold ? "table-secondary" : "")">
                        <td>
                            @item.Title
                            @if (item.IsSold)
                            {
                                <span class="badge bg-secondary ms-2">Sold</span>
                            }
                        </td>
                        <td>@item.Category</td>
                        <td class="text-end">@item.Price.ToString("C")</td>
                        <td>@item.PostedAt.ToString("g")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-eye"></i> Details
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- Pagination -->
@if (totalPages > 1)
{
    <nav aria-label="Classifieds page navigation">
        <ul class="pagination justify-content-center">
            <!-- Previous page -->
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-category="@currentCategory" tabindex="@(currentPage == 1 ? "-1" : "")" aria-disabled="@(currentPage == 1 ? "true" : "false")">Previous</a>
            </li>
            
            <!-- Page numbers -->
            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")" aria-current="@(i == currentPage ? "page" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-category="@currentCategory">@i</a>
                </li>
            }
            
            <!-- Next page -->
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-category="@currentCategory" tabindex="@(currentPage == totalPages ? "-1" : "")" aria-disabled="@(currentPage == totalPages ? "true" : "false")">Next</a>
            </li>
        </ul>
    </nav>
}